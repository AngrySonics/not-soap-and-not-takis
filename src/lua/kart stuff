addHook('PlayerSpawn', function(p)
	if (p.inkart == nil) then
		p.inkart = 0
	end
end)

addHook('PlayerSpawn', function(player)
	if (player.notsoapnottakiskartcompatidk == nil) then
		player.notsoapnottakiskartcompatidk = 0
	end
end)

addHook("PlayerThink", function(player, p)
	if (player and player.mo and player.mo.valid) then
		if player.mo.skin == "notsoap" or player.mo.skin == "nottakis" then
			if player.inkart then
				player.notsoapnottakiskartcompatidk = 1
			else
				player.notsoapnottakiskartcompatidk = 0
			end
		end
	end
end)

freeslot("sfx_shkow1","sfx_ntkow1","sfx_ntkow2","sfx_ntkow3","sfx_ntkow4","sfx_ntkow5","sfx_ntkow6","sfx_ntkow7")

